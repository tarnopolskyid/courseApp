<div class="fullscreen">
    <h1>Add new course</h1>

    {{#if error}}
        <p class="alert">{{error}}</p>
    {{/if}}

    <form action="/add" method="POST" novalidate>
        <div class="input-field">
            <input placeholder="Placeholder" name="title" type="text" class="validate" required value="{{data.title}}">
            <label for="title">Course name</label>
            <span class="helper-text" data-error="Enter name"></span>
        </div>
        
        <div class="input-field">
            <input placeholder="Placeholder" name="price" id="price" type="number" class="validate" required min="1" value="{{data.price}}">
            <label for="price">Course price</label>
            <span class="helper-text" data-error="Enter price"></span>
        </div>

        <div class="input-field">
            <input placeholder="Placeholder" name="img" id="img" type="text" class="validate" required value="{{data.img}}">
            <label for="img">Image URL</label>
            <span class="helper-text" data-error="Enter url"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary">Add course</button>
    </form>
    <br>
</div>